    <div class=" forms-container ">
        <div class="signin-signup">

            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="sign-in-form">
                <h2 class="title">Đăng Ký</h2>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input asp-for="Input.LastName" type="text" placeholder="Last Name" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input asp-for="Input.FirstName" type="text" placeholder="First Name" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="input-field">
                    <i class="fas fa-envelope"></i>
                    <input asp-for="Input.Email" type="text" placeholder="Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input asp-for="Input.Password" type="password" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirm Password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Đăng Ký</button>
                </div>

            </form>

        </div>
        <div class="conten_login">
            <a class="navbar-brand" href="/" style="color: white">VietPara</a>
            
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartial" />
            </div>
        </div>
        <div class="panels-container">
            
            <div class="panel left-panel">

                <div class="panel img-panel">
